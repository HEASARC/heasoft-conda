
{
    "packages": {
        "heasoft": {
            "root": "/FTP/software/lheasoft/lheasoft{version}/heasoft-{version}",
            "include": ["*"],
            "exclude": [
                "x86_64-pc-linux-gnu-*",
                "x86_64-apple*",
                "spectral/help",
                "spectral/modelData",
                "Xspec/src/spectral/modelData",
                "ftools/xstar/data/atdb.fits"
            ]
        },
        "heasoft-tests": {
            "link": "heasoft-{version}"
        },
        "xspec-data": {
            "root": "/FTP/software/lheasoft/lheasoft{version}/heasoft-{version}",
            "include": [
                "spectral/modelData"
            ],
            "exclude": [
                "spectral/modelData/apec_*",
                "spectral/modelData/eigen_*",
                "spectral/modelData/slimbb-full.fits",
                "spectral/modelData/xillver-a-Ec3.fits"
            ]
        },
        "xspec-data-extra": {
            "root": "/FTP/software/lheasoft/lheasoft{version}/heasoft-{version}",
            "include": [
                "spectral/modelData/apec_*",
                "spectral/modelData/eigen_*",
                "spectral/modelData/slimbb-full.fits",
                "spectral/modelData/xillver-a-Ec3.fits"
            ]
        }
    }
}